<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/index_sign_in"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginLeft="@dimen/login_edit_bg"
            android:layout_marginRight="@dimen/login_edit_bg"
            android:layout_weight="3.6"
            android:orientation="vertical"
            android:paddingBottom="10px"
            android:paddingTop="21px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:text="           上网不泄密"
                    android:textColor="#fff"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="          泄密不上网"
                    android:textColor="#fff"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/network_account"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1.8"
                    android:background="@drawable/bg_login_edittext"
                    android:gravity="center"
                    android:hint="username"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/network_editPass"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.8"
                    android:background="@drawable/bg_login_edittext"
                    android:gravity="center"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:layout_marginTop="15dp"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:textSize="20sp"/>

                <!-- 登录按钮 -->
                <Button
                    android:id="@+id/button_network"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.8"
                    android:background="@drawable/bg_login_button"
                    android:fontFamily="serif-monospace"
                    android:text="Login"
                    android:textColor="#FFF"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 复选框层 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 记住密码选项 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/network_save_me"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:textColor="#FFF"
                    android:button="@drawable/login_checkbox"
                    android:text="  记住密码    "/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/network_auto_login"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:textColor="#FFF"
                    android:button="@drawable/login_checkbox"
                    android:text="  自动登录"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"></LinearLayout>
    </LinearLayout>

</LinearLayout>